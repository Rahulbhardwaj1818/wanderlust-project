<% layout("/layouts/boilerplate") %>

<style>
  .offcanvas {
    background-color: #fff !important;
  }
  @media (max-width: 768px) {
    .review-card .card-body {
      overflow: hidden;
    }
    .starability-result {
      transform: scale(0.85);
      transform-origin: left top;
    }
    /* Fix for mobile navigation menu overlay */
    .navbar-collapse {
      background-color: #fff;
      position: fixed;
      top: 0;
      left: 0;
      width: 75%;
      max-width: 300px;
      height: 100vh;
      z-index: 1060;
      box-shadow: 5px 0 15px rgba(0,0,0,0.1);
      padding: 2rem 1rem;
      overflow-y: auto;
    }
    /* Hide search box inside hamburger menu */
    .navbar-collapse form[role="search"], .navbar-collapse input[name="search"], .navbar-collapse input[type="search"] {
      display: none !important;
    }
  }
</style>

<script>
  window.mapData = {
    token: "<%= mapToken %>",
    coordinates: <%- JSON.stringify(listing.geometry.coordinates) %>,
    location: <%- JSON.stringify(listing.location) %>
  };
</script>


<div class="row mt-3">
    <div class="col-8 offset-3">
    <h3><%=listing.title %> </h3>
    <div class="col-12 col-md-8 offset-md-2">
    <h3 class="fw-bold"><%=listing.title %> </h3>
    </div>

<div class="card col-6 offset-3 show-card listing-card">
<div class="card col-12 col-md-8 offset-md-2 show-card listing-card shadow-sm">
 <img src="<%=listing.image.url  %>" class="card-img-top show-img" alt="listing_image" style="height: 20rem">
  <div class="card-body">
    <p class="card-text">Posted by <i><%= listing.owner.username %></i></p>
    <p class="card-text"><%= listing.description %></p>
    <p class="card-text">&#8377; <%= listing.price.toLocaleString("en-IN") %></p>
    <p class="card-text"><%= listing.location %></p>
    <p class="card-text"><%= listing.country %></p>
    <button type="button" class="btn btn-danger w-100 rounded-pill mt-3" data-bs-toggle="modal" data-bs-target="#bookingModal" data-id="<%= listing._id %>" data-title="<%= listing.title %>" data-price="<%= listing.price %>">
      Book & Pay
    </button>
  </div>
</div>

<br>   
<div class="col-8 offset-3">
<div class="col-12 col-md-8 offset-md-2">
  <div class="btns d-flex gap-3">
    <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark edit-btn">Edit</a>
    <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
      <button class="btn btn-dark">Delete</button>
    </form>
  </div>
</div>
<div class="col-8 offset-3 mb-3">
<div class="col-12 col-md-8 offset-md-2 mb-3">
<% if(currentUser) {%>
  <hr>
<h4>Leave a Review</h4>
<form action="/listings/<%=listing._id%>/reviews" method="POST" novalidate class="needs-validation">
<div class="mb-3 mt-3">
  <label for="rating" class="form-label">Rating</label>

<fieldset class="starability-slot">
  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
  <label for="first-rate1" title="Terrible">1 star</label>
  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>
  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
</fieldset>
</div>

<div class="mb-3 mt-3">
  <label for="comment" class="form-label">Comment</label>
  <textarea id="comment" name="review[comment]" rows="5" cols="30" class="form-control" required></textarea>
  <div class="invalid-feedback">Please enter a some comment for review</div><br>


</div>
<button class="btn btn-outline-dark ">Submit</button>

</form>
<hr>
<% } %>

<% if(listing.reviews.length > 0) { %>
<div class="row">
<p><b>All Reviews</b></p>
  <% for(let review of listing.reviews){ %>
    <div class="card col-12 col-md-5 ms-md-3 mb-3 review-card">
  <div class="card-body">
    <h5 class="card-title"><%=review.author.username%></h5>
    <p class="starability-result card-text" data-rating="<%=review.rating%>"></p>

    <p class="card-text"><%=review.comment %></p>

<form action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE" class="mb-3" method="POST">
  <button class="btn btn-sm btn-dark">Delete</button>

</form>
  </div>
     </div>
        <%} %>
</div>
    <%} %>
</div>
<div class="col-8 offset-3 mb-3">
<div class="col-12 col-md-8 offset-md-2 mb-3">
<h3>Where you'll be</h3>
<div id="map"></div>
</div>
</div>

<!-- Booking & Payment Modal -->
<div class="modal fade" id="bookingModal" tabindex="-1" aria-labelledby="bookingModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title fw-bold" id="bookingModalLabel">Confirm and Pay</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/bookings/create" method="POST">
          <input type="hidden" name="listingId" id="bookingListingId">
          
          <div class="row">
            <!-- Trip Details -->
            <div class="col-md-6 border-end">
              <h6 class="fw-bold mb-3">Your Trip</h6>
              <div class="row g-3 mb-4">
                <div class="col-6">
                  <label class="form-label small fw-bold">Check-in</label>
                  <input type="date" class="form-control" name="checkin" required>
                </div>
                <div class="col-6">
                  <label class="form-label small fw-bold">Check-out</label>
                  <input type="date" class="form-control" name="checkout" required>
                </div>
                <div class="col-12">
                  <label class="form-label small fw-bold">Guests</label>
                  <input type="number" class="form-control" name="guests" value="1" min="1" required>
                </div>
              </div>

              <h6 class="fw-bold mb-3">Pay with</h6>
              <div class="mb-3">
                <div class="border rounded p-3">
                  <div class="form-check mb-2">
                    <input class="form-check-input" type="radio" name="paymentMethod" id="payCard" value="card" checked>
                    <label class="form-check-label d-flex justify-content-between align-items-center" for="payCard">
                      <span>Credit or Debit Card</span>
                      <span><i class="fa-brands fa-cc-visa fa-lg"></i> <i class="fa-brands fa-cc-mastercard fa-lg"></i></span>
                    </label>
                  </div>
                  <input type="text" class="form-control mb-2" placeholder="Card Number" maxlength="16">
                  <div class="row g-2">
                    <div class="col-6"><input type="text" class="form-control" placeholder="Expiration"></div>
                    <div class="col-6"><input type="text" class="form-control" placeholder="CVV"></div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Price Details -->
            <div class="col-md-6 ps-md-4">
              <div class="bg-light p-3 rounded-3 mt-3 mt-md-0">
                <div class="d-flex gap-3 mb-3">
                  <img id="bookingImage" src="" class="rounded" style="width: 100px; height: 100px; object-fit: cover;">
                  <div>
                    <h6 class="fw-bold mb-1" id="bookingTitle"></h6>
                    <p class="text-muted small mb-0">Entire home</p>
                    <p class="mb-0"><i class="fa-solid fa-star text-danger"></i> <span>New</span></p>
                  </div>
                </div>
                <hr>
                <h6 class="fw-bold">Price Details</h6>
                <div class="d-flex justify-content-between mb-2">
                  <span id="bookingPriceBase"></span>
                  <span id="bookingPriceTotalBase"></span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                  <span>Taxes & Fees (18%)</span>
                  <span id="bookingTax"></span>
                </div>
                <hr>
                <div class="d-flex justify-content-between fw-bold fs-5">
                  <span>Total (INR)</span>
                  <span id="bookingGrandTotal"></span>
                </div>
              </div>
              
              <button type="submit" class="btn btn-danger w-100 btn-lg mt-4 rounded-3">Confirm and Pay</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  // Handle Booking Modal Data
  const bookingModal = document.getElementById('bookingModal');
  if (bookingModal) {
    bookingModal.addEventListener('show.bs.modal', event => {
      const button = event.relatedTarget;
      const title = button.getAttribute('data-title');
      const price = Number(button.getAttribute('data-price'));
      const id = button.getAttribute('data-id');
      const image = button.closest('.card').querySelector('.card-img-top').src;
      
      // Update Modal Content
      bookingModal.querySelector('#bookingTitle').textContent = title;
      bookingModal.querySelector('#bookingImage').src = image;
      bookingModal.querySelector('#bookingListingId').value = id;
      
      // Simple Price Calculation (Assuming 1 night for display initially)
      const tax = price * 0.18;
      const total = price + tax;
      
      bookingModal.querySelector('#bookingPriceBase').textContent = `₹${price.toLocaleString("en-IN")} x 1 night`;
      bookingModal.querySelector('#bookingPriceTotalBase').textContent = `₹${price.toLocaleString("en-IN")}`;
      bookingModal.querySelector('#bookingTax').textContent = `₹${tax.toLocaleString("en-IN")}`;
      bookingModal.querySelector('#bookingGrandTotal').textContent = `₹${total.toLocaleString("en-IN")}`;
    });
  }
</script>

<script src="/js/map.js?v=2"></script>