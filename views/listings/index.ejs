<% layout("/layouts/boilerplate") %>
    
<style>
  .filters-container {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    margin-top: 1rem; 
  }
  .filters{
    display: flex;
    align-items: center;
    gap: 2rem;
    flex-grow: 1;
    overflow-x: auto; /* Allows scrolling if needed on small desktops too */
  }
  .filters::-webkit-scrollbar {
    display: none;
  }
  .filter{
    text-align: center;
    opacity: 0.6;
    text-decoration: none;
    color: #000;
    cursor: pointer;
    flex-shrink: 0; /* Prevents shrinking */
    transition: opacity 0.2s, border-bottom 0.2s;
    border-bottom: 2px solid transparent;
    padding-bottom: 0.25rem;
  }
  .filter:hover, .filter.active {
    opacity: 1;
    border-bottom: 2px solid #000;
  }
  .filter p {
    font-size: 0.8rem;
    margin-top: 0.5rem;
  }
  .tax-info {
    display: none;
  }
  .tax-toggle {
    border: 1px solid #ddd;
    border-radius: 1rem;
    height: 3.25rem;
    padding: 1rem;
    margin-left: auto;
    display: flex;
    align-items: center;
    box-shadow: 0 2px 5px rgba(0,0,0,0.05);
  }
  .listing-card {
    border: none !important;
    margin-bottom: 2rem;
    border-radius: 1rem;
    transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  }
  .listing-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.05);
  }
  .card-img-top {
    border-radius: 1rem !important;
    width: 100% !important;
    object-fit: cover !important;
    height: 20rem;
  }
  .card-body {
    padding: 0 !important;
  }
  .listing-link {
    text-decoration: none;
  }
  
  /* Mobile Responsiveness */
  @media (max-width: 768px) {
    .filters-container {
      flex-direction: column;
      align-items: stretch;
    }
    .filters {
      flex-wrap: nowrap;
      padding-bottom: 1rem;
      gap: 1rem;
      width: 100%;
    }
    .filter {
      margin-right: 1rem;
    }
    .tax-toggle {
      display: none;
    }
    .card-img-top {
      height: 18rem;
    }
  }
  .filter-section {
    margin-bottom: 1.5rem;
  }
  .filter-section h6 {
    font-weight: 600;
    margin-bottom: 1rem;
  }
  .mobile-search-bar {
    background: #fff;
    border: 1px solid #ddd;
    border-radius: 2rem;
    padding: 0.5rem 1rem;
    box-shadow: 0 3px 10px rgba(0,0,0,0.08);
  }
  .offcanvas {
    background-color: #fff !important;
  }
  /* Fix for mobile navigation menu overlay */
  @media (max-width: 768px) {
    .navbar-collapse {
      background-color: #fff;
      position: fixed;
      top: 0;
      left: 0;
      width: 75%;
      max-width: 300px;
      height: 100vh;
      z-index: 1060;
      box-shadow: 5px 0 15px rgba(0,0,0,0.1);
      padding: 2rem 1rem;
      overflow-y: auto;
    }
    /* Hide search box inside hamburger menu */
    .navbar-collapse form[role="search"], .navbar-collapse input[name="search"], .navbar-collapse input[type="search"] {
      display: none !important;
    }
  }
  /* Fixes for Review Stars and Buttons on Mobile (Show Page) */
  @media (max-width: 768px) {
    .card-body {
      overflow: hidden;
    }
    .starability-result {
      transform: scale(0.8);
      transform-origin: left top;
    }
    .btns {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
    }
    .btns .btn, .btns form {
      flex: 1 1 100%; /* Stack buttons full width so they don't cut off */
      width: 100%;
    }
  }

</style>

<!-- Mobile Search Bar -->
<div class="d-md-none mt-3 mb-3 d-flex align-items-center mobile-search-bar">
  <form action="/listings" method="GET" class="flex-grow-1 me-2 d-flex">
    <input type="text" class="form-control border-0 shadow-none" name="search" placeholder="Search destinations..." aria-label="Search destinations">
    <button class="btn btn-danger rounded-circle" type="submit" style="width: 35px; height: 35px; padding: 0; display: flex; align-items: center; justify-content: center;"><i class="fa-solid fa-magnifying-glass" style="font-size: 0.8rem;"></i></button>
  </form>
  <button class="btn btn-light rounded-circle border ms-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#mobileFilters" aria-controls="mobileFilters" style="width: 35px; height: 35px; padding: 0;">
    <i class="fa-solid fa-sliders"></i>
  </button>
</div>

<div class="filters-container">
<div class="filters">
  <% if (typeof filters !== 'undefined' && filters.length > 0) { %>
    <% filters.forEach(filter => { %>
      <a href="/listings?category=<%= filter.title %>" class="filter <%= (typeof category !== 'undefined' && category === filter.title) || (typeof category === 'undefined' && filter.title === 'All') ? 'active' : '' %>">
        <div><i class="fa-solid <%= filter.icon %>"></i></div>
        <p><%= filter.title %></p>
      </a>
    <% }) %>
  <% } %>
</div>

<div class="tax-toggle">
<div class="form-check-reverse form-switch">
  <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
  <label class="form-check-label" for="switchCheckDefault">Display Taxes</label>
</div>
</div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-1 mt-3">
  <% if(allListings.length == 0){ %>
    <div class="col-12 text-center mt-5 mb-5">
      <i class="fa-solid fa-magnifying-glass-location fa-3x text-muted mb-3"></i>
      <h3>No listings found</h3>
      <p class="text-muted">Try adjusting your search or filters to find what you're looking for.</p>
      <a href="/listings" class="btn btn-danger mt-2">Clear all filters</a>
    </div>
  <% } %>
  <% for (let listing of allListings) { %>
<div class="col">
<div class="card listing-card h-100">
<a href="/listings/<%=listing._id %>" class="listing-link text-decoration-none text-dark">
 <img src="<%= listing.image.url%> " class="card-img-top" alt="listing_image">

   <div class="card-img-overlay">
     <i class="fa-regular fa-heart" style="position: absolute; top: 15px; right: 15px; color: white; font-size: 1.5rem; filter: drop-shadow(0 0 2px rgba(0,0,0,0.5));"></i>
   </div>
  <div class="card-body">
    <p class="card-text">
      <span class="fw-bold text-dark"><%= listing.title %></span><br>
      <% if(listing.roomType) { %>
        <small class="text-muted"><%= listing.roomType.replace(/_/g, ' ') %></small><br>
      <% } %>
      <% if(listing.guests || listing.bedrooms || listing.beds || listing.bathrooms) { %>
        <small class="text-muted" style="font-size: 0.75rem;">
          <%= listing.guests ? listing.guests + ' guests' : '' %> 
          <%= listing.bedrooms ? ' • ' + listing.bedrooms + ' bedrooms' : '' %>
          <%= listing.beds ? ' • ' + listing.beds + ' beds' : '' %>
          <%= listing.bathrooms ? ' • ' + listing.bathrooms + ' baths' : '' %>
        </small><br>
      <% } %>
      <% if(listing.amenities && listing.amenities.length > 0) { %>
        <small class="text-muted" style="font-size: 0.75rem;"><%= listing.amenities.slice(0, 3).join(" • ") %></small><br>
      <% } %>
       <span class="fw-bold">&#8377;<%= listing.price.toLocaleString("en-IN") %></span> <span class="text-muted fw-light">/ night</span>
         <i class="tax-info">&nbsp; &nbsp; +18%GST</i>
    </p>
  </div>
</a>
  <div class="card-footer bg-white border-0 pt-0">
    <button type="button" class="btn btn-danger w-100 rounded-pill" data-bs-toggle="modal" data-bs-target="#bookingModal" data-id="<%= listing._id %>" data-title="<%= listing.title %>" data-price="<%= listing.price %>">
      Book & Pay
    </button>
  </div>
</div>
</div>
   <% } %>
</div>

<!-- Mobile Filters Offcanvas -->
<div class="offcanvas offcanvas-start" tabindex="-1" id="mobileFilters" aria-labelledby="mobileFiltersLabel">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="mobileFiltersLabel">Filters</h5>
    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
    <form action="/listings" method="GET">
    <div class="filter-section">
      <h6>Display Options</h6>
      <div class="d-flex justify-content-between align-items-center border rounded-3 p-3">
        <label class="form-check-label m-0" for="switchCheckMobile">Display Taxes</label>
        <div class="form-check form-switch m-0 p-0">
          <input class="form-check-input" type="checkbox" role="switch" id="switchCheckMobile" style="margin-left: 0;">
        </div>
      </div>
    </div>
    <hr>
    
    <div class="filter-section">
      <h6>Price Range</h6>
      <div class="d-flex align-items-center gap-2">
        <div class="form-floating flex-grow-1">
          <input type="number" class="form-control" id="minPrice" name="minPrice" placeholder="Min" value="<%= typeof minPrice !== 'undefined' ? minPrice : '' %>">
          <label for="minPrice">Min Price</label>
        </div>
        <span>-</span>
        <div class="form-floating flex-grow-1">
          <input type="number" class="form-control" id="maxPrice" name="maxPrice" placeholder="Max" value="<%= typeof maxPrice !== 'undefined' ? maxPrice : '' %>">
          <label for="maxPrice">Max Price</label>
        </div>
      </div>
    </div>
    <hr>

    <div class="filter-section">
      <h6>Type of place</h6>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="entire_home" id="typeEntire" name="roomType" <%= (typeof roomType !== 'undefined' && roomType.includes('entire_home')) ? 'checked' : '' %>>
        <label class="form-check-label" for="typeEntire">Entire home</label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="private_room" id="typePrivate" name="roomType" <%= (typeof roomType !== 'undefined' && roomType.includes('private_room')) ? 'checked' : '' %>>
        <label class="form-check-label" for="typePrivate">Private room</label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="shared_room" id="typeShared" name="roomType" <%= (typeof roomType !== 'undefined' && roomType.includes('shared_room')) ? 'checked' : '' %>>
        <label class="form-check-label" for="typeShared">Shared room</label>
      </div>
    </div>
    <hr>

    <div class="filter-section">
      <h6>Rooms and Beds</h6>
      <div class="row g-2">
        <div class="col-6">
          <label for="bedrooms" class="form-label small">Bedrooms</label>
          <input type="number" class="form-control" id="bedrooms" name="bedrooms" min="0" placeholder="Any" value="<%= typeof bedrooms !== 'undefined' ? bedrooms : '' %>">
        </div>
        <div class="col-6">
          <label for="beds" class="form-label small">Beds</label>
          <input type="number" class="form-control" id="beds" name="beds" min="0" placeholder="Any" value="<%= typeof beds !== 'undefined' ? beds : '' %>">
        </div>
        <div class="col-6">
          <label for="bathrooms" class="form-label small">Bathrooms</label>
          <input type="number" class="form-control" id="bathrooms" name="bathrooms" min="0" placeholder="Any" value="<%= typeof bathrooms !== 'undefined' ? bathrooms : '' %>">
        </div>
         <div class="col-6">
          <label for="guests" class="form-label small">Guests</label>
          <input type="number" class="form-control" id="guests" name="guests" min="1" placeholder="Any" value="<%= typeof guests !== 'undefined' ? guests : '' %>">
        </div>
      </div>
    </div>
    <hr>

    <div class="filter-section">
      <h6>Amenities</h6>
      <div class="row row-cols-2 g-2">
        <div class="col"><div class="form-check"><input class="form-check-input" type="checkbox" name="amenities" value="wifi" id="amWifi" <%= (typeof amenities !== 'undefined' && amenities.includes('wifi')) ? 'checked' : '' %>><label class="form-check-label" for="amWifi">Wifi</label></div></div>
        <div class="col"><div class="form-check"><input class="form-check-input" type="checkbox" name="amenities" value="kitchen" id="amKitchen" <%= (typeof amenities !== 'undefined' && amenities.includes('kitchen')) ? 'checked' : '' %>><label class="form-check-label" for="amKitchen">Kitchen</label></div></div>
        <div class="col"><div class="form-check"><input class="form-check-input" type="checkbox" name="amenities" value="ac" id="amAC" <%= (typeof amenities !== 'undefined' && amenities.includes('ac')) ? 'checked' : '' %>><label class="form-check-label" for="amAC">AC</label></div></div>
        <div class="col"><div class="form-check"><input class="form-check-input" type="checkbox" name="amenities" value="pool" id="amPool" <%= (typeof amenities !== 'undefined' && amenities.includes('pool')) ? 'checked' : '' %>><label class="form-check-label" for="amPool">Pool</label></div></div>
      </div>
    </div>
    <hr>

    <div class="filter-section">
      <h6>Categories</h6>
      <div class="d-flex flex-wrap gap-2 mt-3">
        <% if (typeof filters !== 'undefined' && filters.length > 0) { %>
          <% filters.forEach(filter => { %>
            <input type="radio" class="btn-check" name="category" id="cat_<%= filter.title %>" value="<%= filter.title %>" autocomplete="off" <%= (typeof category !== 'undefined' && category === filter.title) ? 'checked' : '' %>>
            <label class="btn btn-outline-secondary btn-sm rounded-pill" for="cat_<%= filter.title %>">
              <%= filter.title %>
            </label>
          <% }) %>
        <% } %>
      </div>
    </div>
    
    <div class="mt-4 d-grid gap-2">
      <button type="submit" class="btn btn-danger btn-lg">Show Listings</button>
      <button type="reset" class="btn btn-outline-secondary">Clear all</button>
      <hr>
      <a href="/listings/new" class="btn btn-outline-dark">
        <i class="fa-solid fa-plus me-2"></i> List your home
      </a>
    </div>
    </form>
  </div>
</div>

<!-- Booking & Payment Modal -->
<div class="modal fade" id="bookingModal" tabindex="-1" aria-labelledby="bookingModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title fw-bold" id="bookingModalLabel">Confirm and Pay</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/bookings/create" method="POST">
          <input type="hidden" name="listingId" id="bookingListingId">
          
          <div class="row">
            <!-- Trip Details -->
            <div class="col-md-6 border-end">
              <h6 class="fw-bold mb-3">Your Trip</h6>
              <div class="row g-3 mb-4">
                <div class="col-6">
                  <label class="form-label small fw-bold">Check-in</label>
                  <input type="date" class="form-control" name="checkin" required>
                </div>
                <div class="col-6">
                  <label class="form-label small fw-bold">Check-out</label>
                  <input type="date" class="form-control" name="checkout" required>
                </div>
                <div class="col-12">
                  <label class="form-label small fw-bold">Guests</label>
                  <input type="number" class="form-control" name="guests" value="1" min="1" required>
                </div>
              </div>

              <h6 class="fw-bold mb-3">Pay with</h6>
              <div class="mb-3">
                <div class="border rounded p-3">
                  <div class="form-check mb-2">
                    <input class="form-check-input" type="radio" name="paymentMethod" id="payCard" value="card" checked>
                    <label class="form-check-label d-flex justify-content-between align-items-center" for="payCard">
                      <span>Credit or Debit Card</span>
                      <span><i class="fa-brands fa-cc-visa fa-lg"></i> <i class="fa-brands fa-cc-mastercard fa-lg"></i></span>
                    </label>
                  </div>
                  <input type="text" class="form-control mb-2" placeholder="Card Number" maxlength="16">
                  <div class="row g-2">
                    <div class="col-6"><input type="text" class="form-control" placeholder="Expiration"></div>
                    <div class="col-6"><input type="text" class="form-control" placeholder="CVV"></div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Price Details -->
            <div class="col-md-6 ps-md-4">
              <div class="bg-light p-3 rounded-3 mt-3 mt-md-0">
                <div class="d-flex gap-3 mb-3">
                  <img id="bookingImage" src="" class="rounded" style="width: 100px; height: 100px; object-fit: cover;">
                  <div>
                    <h6 class="fw-bold mb-1" id="bookingTitle"></h6>
                    <p class="text-muted small mb-0">Entire home</p>
                    <p class="mb-0"><i class="fa-solid fa-star text-danger"></i> <span>New</span></p>
                  </div>
                </div>
                <hr>
                <h6 class="fw-bold">Price Details</h6>
                <div class="d-flex justify-content-between mb-2">
                  <span id="bookingPriceBase"></span>
                  <span id="bookingPriceTotalBase"></span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                  <span>Taxes & Fees (18%)</span>
                  <span id="bookingTax"></span>
                </div>
                <hr>
                <div class="d-flex justify-content-between fw-bold fs-5">
                  <span>Total (INR)</span>
                  <span id="bookingGrandTotal"></span>
                </div>
              </div>
              
              <button type="submit" class="btn btn-danger w-100 btn-lg mt-4 rounded-3">Confirm and Pay</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  let taxSwitches = document.querySelectorAll("#switchCheckDefault, #switchCheckMobile");
  
  taxSwitches.forEach((toggle) => {
    toggle.addEventListener("click", () => {
      let taxInfo = document.getElementsByClassName("tax-info");
      // Sync other toggles
      taxSwitches.forEach(t => { if(t !== toggle) t.checked = toggle.checked; });
      
      for (info of taxInfo) {
        if (info.style.display != "inline") {
          info.style.display = "inline";
        } else {
          info.style.display = "none";
        }
      }
    });
  });

  // Handle Booking Modal Data
  const bookingModal = document.getElementById('bookingModal');
  if (bookingModal) {
    bookingModal.addEventListener('show.bs.modal', event => {
      const button = event.relatedTarget;
      const title = button.getAttribute('data-title');
      const price = Number(button.getAttribute('data-price'));
      const id = button.getAttribute('data-id');
      const image = button.closest('.card').querySelector('.card-img-top').src;
      
      // Update Modal Content
      bookingModal.querySelector('#bookingTitle').textContent = title;
      bookingModal.querySelector('#bookingImage').src = image;
      bookingModal.querySelector('#bookingListingId').value = id;
      
      // Simple Price Calculation (Assuming 1 night for display initially)
      const tax = price * 0.18;
      const total = price + tax;
      
      bookingModal.querySelector('#bookingPriceBase').textContent = `₹${price.toLocaleString("en-IN")} x 1 night`;
      bookingModal.querySelector('#bookingPriceTotalBase').textContent = `₹${price.toLocaleString("en-IN")}`;
      bookingModal.querySelector('#bookingTax').textContent = `₹${tax.toLocaleString("en-IN")}`;
      bookingModal.querySelector('#bookingGrandTotal').textContent = `₹${total.toLocaleString("en-IN")}`;
    });
  }
</script>  


