<%layout('/layouts/boilerplate') %>
<style>
  @media (max-width: 768px) {
    /* Fix for mobile navigation menu overlay */
    .navbar-collapse {
      background-color: #fff;
      position: fixed;
      top: 0;
      left: 0;
      width: 75%;
      max-width: 300px;
      height: 100vh;
      z-index: 1060;
      box-shadow: 5px 0 15px rgba(0,0,0,0.1);
      padding: 2rem 1rem;
      overflow-y: auto;
    }
    /* Hide search box inside hamburger menu */
    .navbar-collapse form[role="search"], .navbar-collapse input[name="search"], .navbar-collapse input[type="search"] {
      display: none !important;
    }
  }
